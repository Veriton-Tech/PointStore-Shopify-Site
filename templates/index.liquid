      padding: 15px 20px;
      border-radius: 10px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
      z-index: 10000;
      transform: translateX(400px);
      transition: all 0.3s ease;
      font-weight: 600;
      backdrop-filter: blur(10px);
    `;
    
    document.body.appendChild(notification);
    
    // Animate in
    setTimeout(() => {
      notification.style.transform = 'translateX(0)';
    }, 100);
    
    // Animate out and remove
    setTimeout(() => {
      notification.style.transform = 'translateX(400px)';
      setTimeout(() => {
        if (notification.parentNode) {
          notification.parentNode.removeChild(notification);
        }
      }, 300);
    }, 3000);
  }
  
  // Initialize buttons based on existing wishlist
  wishlistButtons.forEach(button => {
    const productId = button.getAttribute('data-product-id');
    if (productId && isInWishlist(productId)) {
      updateWishlistButton(button, true);
    }
    
    button.addEventListener('click', function(e) {
      e.preventDefault();
      
      const productId = this.getAttribute('data-product-id');
      const productTitle = this.getAttribute('data-product-title') || 'Product';
      const productHandle = this.getAttribute('data-product-handle');
      
      if (!productId) {
        showWishlistNotification('Unable to add to wishlist', 'error');
        return;
      }
      
      let wishlist = getWishlist();
      const existingIndex = wishlist.findIndex(item => item.id === productId);
      
      if (existingIndex > -1) {
        // Remove from wishlist
        wishlist.splice(existingIndex, 1);
        updateWishlistButton(this, false);
        showWishlistNotification(`${productTitle} removed from wishlist`, 'success');
      } else {
        // Add to wishlist
        const wishlistItem = {
          id: productId,
          title: productTitle,
          handle: productHandle,
          addedAt: new Date().toISOString()
        };
        
        wishlist.push(wishlistItem);
        updateWishlistButton(this, true);
        showWishlistNotification(`${productTitle} added to wishlist`, 'success');
      }
      
      saveWishlist(wishlist);
      
      // Dispatch custom event for other components
      window.dispatchEvent(new CustomEvent('wishlistUpdated', {
        detail: { wishlist, productId, action: existingIndex > -1 ? 'removed' : 'added' }
      }));
    });
  });
  
  // Scroll animations
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
  };
  
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.style.animation = 'fadeInUp 0.6s ease forwards';
      }
    });
  }, observerOptions);
  
  // Observe elements for scroll animations
  const animatedElements = document.querySelectorAll('.feature-card, .product-card, .timer-item');
  animatedElements.forEach(el => {
    el.style.opacity = '0';
    el.style.transform = 'translateY(30px)';
    observer.observe(el);
  });
});

