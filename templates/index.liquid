<script>
// Match Top Trends card width to Super Deals card width
(function(){
  function setTrendCardWidth(){
    var dealCard = document.querySelector('.super-deals-section .deal-card');
    var wrapper = document.querySelector('.top-trends-wrapper');
    if(!dealCard || !wrapper) return;
    var style = getComputedStyle(dealCard);
    // Calculate the outer width including margin
    var rect = dealCard.getBoundingClientRect();
    var marginLeft = parseFloat(style.marginLeft) || 0;
    var marginRight = parseFloat(style.marginRight) || 0;
    var total = rect.width + marginLeft + marginRight;
    // Set CSS variable and attribute to enable CSS rule
    wrapper.style.setProperty('--trend-card-width', total + 'px');
    wrapper.setAttribute('data-trend-card-width', 'true');
  }

  // Debounce helper
  function debounce(fn, wait){
    var t;
    return function(){
      clearTimeout(t);
      t = setTimeout(fn, wait || 100);
    }
  }

  document.addEventListener('DOMContentLoaded', function(){
    setTrendCardWidth();
    window.addEventListener('resize', debounce(setTrendCardWidth, 120));
  });
})();
</script>
