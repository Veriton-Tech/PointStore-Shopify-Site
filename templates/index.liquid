<style>
  /* SHEIN-style Product Card Styles */
  .product-card {
    position: relative;
    background: transparent;
    border-radius: 4px;
    overflow: hidden;
    transition: all 0.3s ease;
    margin-bottom: 20px;
  }
  
  .product-card:hover {
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    transform: translateY(-3px);
  }
  
  .product-card-image {
    position: relative;
    width: 100%;
    /* padding-top: 130%; */
    max-height: 300px; /* Maximum height for the image container */
    overflow: hidden;
  }
  
  .product-img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
    max-height: 300px; /* Maximum height for the image */
  }
  
  .product-card:hover .product-img {
    transform: scale(1.05);
  }
  
  .product-card-badge {
    position: absolute;
    top: 10px;
    left: 10px;
    background-color: #ff4e4e;
    color: white;
    padding: 3px 8px;
    font-size: 11px;
    font-weight: 500;
    border-radius: 2px;
    z-index: 2;
  }
  
  .product-card-content {
    padding: 10px 8px;
    background: transparent; /* Transparent background to blend with page background */
  }
  
  .product-card-title {
    font-size: 13px;
    font-weight: 400;
    margin: 0 0 8px;
    color: #333;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    height: 36px;
  }
  
  .product-card-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }
  
  .product-card-price {
    display: flex;
    flex-direction: column;
  }
  
  .product-card-price-current {
    font-size: 14px;
    font-weight: 600;
    color: #ff4e4e;
  }
  
  .product-card-price-original {
    font-size: 12px;
    color: #999;
    text-decoration: line-through;
  }
  
  .product-card-actions {
    display: flex;
    gap: 5px;
    opacity: 1; /* Always visible */
  }
  
  .icon-btn {
    /* background: transparent; */
    border: none;
    cursor: pointer;
    padding: 10px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
    opacity: 1; /* Always visible */
  }
  
  .icon-btn:hover {
    background-color: rgba(56, 11, 11, 0.05);
  }
  
  .icon-btn .icon {
    width: 18px;
    height: 18px;
    color: #666;
  }
  
  .wishlist-btn .icon {
    color: #666; /* Always visible */
  }
  
  .wishlist-btn:hover .icon {
    color: #ff4e4e;
  }
 
  .cart-btn:hover .icon {
    color: #000000;
  }
  
  /* Responsive adjustments */
  @media (max-width: 991px) {
    .product-card-image {
      /* padding-top: 140%; Slightly less tall on medium screens */
    }
    
    .product-card-title {
      font-size: 12px;
      height: 32px;
    }
    
    .icon-btn .icon {
      width: 16px;
      height: 16px;
    }
  }
  
  @media (max-width: 576px) {
    .products-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 10px;
    }
    
    .product-card-content {
      padding: 8px 5px;
    }
    
    .product-card-title {
      font-size: 11px;
      margin-bottom: 5px;
      height: 30px;
    }
    
    .product-card-price-current {
      font-size: 12px;
    }
    
    .product-card-price-original {
      font-size: 10px;
    }
    
    .icon-btn .icon {
      width: 14px;
      height: 14px;
    }
  }
</style>


