document.addEventListener('DOMContentLoaded', function() {
  // Deal timer functionality
  function updateDealTimer() {
    const timerHours = document.querySelector('.timer-hours');
    const timerMinutes = document.querySelector('.timer-minutes');
    
    if (timerHours && timerMinutes) {
      let hours = parseInt(timerHours.textContent);
      let minutes = parseInt(timerMinutes.textContent);
      
      minutes--;
      
      if (minutes < 0) {
        minutes = 59;
        hours--;
        
        if (hours < 0) {
          hours = 23; // Reset to 24 hour cycle
        }
      }
      
      timerHours.textContent = hours.toString().padStart(2, '0');
      timerMinutes.textContent = minutes.toString().padStart(2, '0');
    }
  }
  
  // Update timer every minute
  setInterval(updateDealTimer, 60000);
  
  // Deal card hover effects
  const dealCards = document.querySelectorAll('.deal-card');
  dealCards.forEach(card => {
    card.addEventListener('mouseenter', function() {
      this.style.transform = 'translateY(-10px) scale(1.02)';
    });
    
    card.addEventListener('mouseleave', function() {
      this.style.transform = 'translateY(0) scale(1)';
    });
  });
});

// Top Trends Tab Functionality
document.addEventListener('DOMContentLoaded', function() {
  const trendTabs = document.querySelectorAll('.trend-tab');
  const trendPanels = document.querySelectorAll('.trend-panel');
  
  trendTabs.forEach(tab => {
    tab.addEventListener('click', function() {
      const targetTrend = this.getAttribute('data-trend');
      
      // Remove active class from all tabs and panels
      trendTabs.forEach(t => t.classList.remove('active'));
      trendPanels.forEach(p => p.classList.remove('active'));
      
