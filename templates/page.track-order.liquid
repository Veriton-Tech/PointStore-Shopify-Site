{% comment %}
  Track Order page template
{% endcomment %}

<div class="track-order-page">
  <div class="container">
    <!-- Page Header -->
    <div class="page-header">
      <h1 class="page-title">Track Your Order</h1>
      <p class="page-description">Enter your order number and email to track your shipment</p>
    </div>

    <!-- Track Order Content -->
    <div class="track-order-content">
      <div class="track-order-layout">
        <!-- Track Form -->
        <div class="track-form-section">
          <div class="track-form-container">
            <h2 class="section-title">Track Your Package</h2>
            <form class="track-form" id="track-form">
              <div class="form-group">
                <label for="order-number">Order Number *</label>
                <input type="text" id="order-number" name="order_number" placeholder="Enter your order number" required>
              </div>
              
              <div class="form-group">
                <label for="email">Email Address *</label>
                <input type="email" id="email" name="email" placeholder="Enter your email address" required>
              </div>
              
              <button type="submit" class="btn btn-primary btn-large">Track Order</button>
            </form>
          </div>
        </div>

        <!-- Order Status -->
        <div class="order-status-section" id="order-status-section" style="display: none;">
          <h2 class="section-title">Order Status</h2>
          
          <div class="order-info">
            <div class="order-details">
              <h3>Order #12345</h3>
              <p>Placed on March 15, 2024</p>
              <p>Total: $89.99</p>
            </div>
            
            <div class="tracking-number">
              <strong>Tracking Number:</strong> 1Z999AA1234567890
            </div>
          </div>
          
          <div class="order-timeline">
            <div class="timeline-item completed">
              <div class="timeline-marker">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="20,6 9,17 4,12"></polyline>
                </svg>
              </div>
              <div class="timeline-content">
                <h4>Order Confirmed</h4>
                <p>Your order has been confirmed and is being prepared for shipment.</p>
                <span class="timeline-date">March 15, 2024 at 2:30 PM</span>
              </div>
            </div>
            
            <div class="timeline-item completed">
              <div class="timeline-marker">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="20,6 9,17 4,12"></polyline>
                </svg>
              </div>
              <div class="timeline-content">
                <h4>Order Shipped</h4>
                <p>Your order has been shipped and is on its way to you.</p>
                <span class="timeline-date">March 16, 2024 at 10:15 AM</span>
              </div>
            </div>
            
            <div class="timeline-item completed">
              <div class="timeline-marker">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="20,6 9,17 4,12"></polyline>
                </svg>
              </div>
              <div class="timeline-content">
                <h4>In Transit</h4>
                <p>Your package is in transit to the destination.</p>
                <span class="timeline-date">March 17, 2024 at 8:45 AM</span>
              </div>
            </div>
            
            <div class="timeline-item active">
              <div class="timeline-marker">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="10"></circle>
                </svg>
              </div>
              <div class="timeline-content">
                <h4>Out for Delivery</h4>
                <p>Your package is out for delivery and should arrive today.</p>
                <span class="timeline-date">March 18, 2024 at 6:30 AM</span>
              </div>
            </div>
            
            <div class="timeline-item">
              <div class="timeline-marker">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="10"></circle>
                </svg>
              </div>
              <div class="timeline-content">
                <h4>Delivered</h4>
                <p>Your package has been delivered.</p>
                <span class="timeline-date">Expected: March 18, 2024</span>
              </div>
            </div>
          </div>
          
          <div class="order-actions">
            <a href="#" class="btn btn-secondary">View Order Details</a>
            <a href="#" class="btn btn-secondary">Contact Support</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
/* Track Order Page Styles */
.track-order-page {
  min-height: 100vh;
  padding: 4rem 0;
}

.page-header {
  text-align: center;
  margin-bottom: 4rem;
}

.page-title {
  font-size: 4.8rem;
  margin-bottom: 1.6rem;
  color: #333;
}

.page-description {
  font-size: 1.6rem;
  color: #666;
  max-width: 60rem;
  margin: 0 auto;
}

.track-order-content {
  max-width: 80rem;
  margin: 0 auto;
}

.track-order-layout {
  display: flex;
  flex-direction: column;
  gap: 4rem;
}

.track-form-section {
  background: white;
  border-radius: 1.2rem;
  padding: 3rem;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
}

.track-form-container {
  max-width: 50rem;
  margin: 0 auto;
  text-align: center;
}

.section-title {
  font-size: 2.4rem;
  margin-bottom: 3rem;
  color: #333;
}

.track-form {
  display: flex;
  flex-direction: column;
  gap: 2rem;
}

.form-group {
  display: flex;
  flex-direction: column;
  gap: 0.8rem;
  text-align: left;
}

.form-group label {
  font-size: 1.4rem;
  font-weight: 600;
  color: #333;
}

.form-group input {
  padding: 1.2rem 1.6rem;
  border: 2px solid #e0e0e0;
  border-radius: 0.8rem;
  font-size: 1.4rem;
  transition: border-color 0.3s ease;
}

.form-group input:focus {
  outline: none;
  border-color: #ff6b6b;
}

.order-status-section {
  background: white;
  border-radius: 1.2rem;
  padding: 3rem;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
}

.order-info {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 3rem;
  padding-bottom: 2rem;
  border-bottom: 1px solid #e0e0e0;
}

.order-details h3 {
  font-size: 2rem;
  margin-bottom: 0.8rem;
  color: #333;
}

.order-details p {
  font-size: 1.4rem;
  color: #666;
  margin-bottom: 0.4rem;
}

.tracking-number {
  font-size: 1.4rem;
  color: #333;
  background: #f8f8f8;
  padding: 1rem 1.6rem;
  border-radius: 0.8rem;
}

.order-timeline {
  position: relative;
  margin-bottom: 3rem;
}

.order-timeline::before {
  content: '';
  position: absolute;
  left: 2rem;
  top: 0;
  bottom: 0;
  width: 2px;
  background: #e0e0e0;
}

.timeline-item {
  position: relative;
  display: flex;
  align-items: flex-start;
  gap: 2rem;
  margin-bottom: 3rem;
  padding-left: 2rem;
}

.timeline-item:last-child {
  margin-bottom: 0;
}

.timeline-marker {
  width: 4rem;
  height: 4rem;
  background: #e0e0e0;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  flex-shrink: 0;
  position: relative;
  z-index: 1;
}

.timeline-item.completed .timeline-marker {
  background: #4caf50;
}

.timeline-item.active .timeline-marker {
  background: #ff6b6b;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0% {
    box-shadow: 0 0 0 0 rgba(255, 107, 107, 0.7);
  }
  70% {
    box-shadow: 0 0 0 10px rgba(255, 107, 107, 0);
  }
  100% {
    box-shadow: 0 0 0 0 rgba(255, 107, 107, 0);
  }
}

.timeline-content {
  flex: 1;
}

.timeline-content h4 {
  font-size: 1.6rem;
  margin-bottom: 0.8rem;
  color: #333;
}

.timeline-content p {
  font-size: 1.4rem;
  color: #666;
  margin-bottom: 0.8rem;
  line-height: 1.5;
}

.timeline-date {
  font-size: 1.2rem;
  color: #999;
  font-weight: 500;
}

.order-actions {
  display: flex;
  gap: 1.5rem;
  justify-content: center;
}

/* Responsive Design */
@media (max-width: 768px) {
  .order-info {
    flex-direction: column;
    gap: 2rem;
  }
  
  .order-actions {
    flex-direction: column;
  }
  
  .page-title {
    font-size: 3.6rem;
  }
}

@media (max-width: 480px) {
  .track-form-section,
  .order-status-section {
    padding: 2rem;
  }
  
  .timeline-item {
    padding-left: 1rem;
  }
  
  .order-timeline::before {
    left: 1.5rem;
  }
}
</style>

<script>
// Track order functionality
document.addEventListener('DOMContentLoaded', function() {
  const trackForm = document.getElementById('track-form');
  const orderStatusSection = document.getElementById('order-status-section');
  
  trackForm.addEventListener('submit', function(e) {
    e.preventDefault();
    
    const formData = new FormData(this);
    const orderNumber = formData.get('order_number');
    const email = formData.get('email');
    
    // Simulate API call
    const submitBtn = this.querySelector('button[type="submit"]');
    const originalText = submitBtn.textContent;
    
    submitBtn.textContent = 'Tracking...';
    submitBtn.disabled = true;
    
    setTimeout(() => {
      // Show order status (in real app, this would be based on actual order data)
      orderStatusSection.style.display = 'block';
      orderStatusSection.scrollIntoView({ behavior: 'smooth' });
      
      submitBtn.textContent = originalText;
      submitBtn.disabled = false;
    }, 1500);
  });
});
</script>
