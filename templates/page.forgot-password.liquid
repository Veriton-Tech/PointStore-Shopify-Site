{% comment %}
  Forgot Password page template
{% endcomment %}

<div class="forgot-password-page">
  <div class="container">
    <!-- Page Header -->
    <div class="page-header">
      <h1 class="page-title">Forgot Password</h1>
      <p class="page-description">Enter your email address and we'll send you a link to reset your password</p>
    </div>

    <!-- Forgot Password Content -->
    <div class="forgot-password-content">
      <div class="forgot-password-card">
        <!-- Reset Form -->
        <div class="reset-form-section">
          <div class="reset-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
              <circle cx="12" cy="16" r="1"></circle>
              <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
            </svg>
          </div>
          
          <h2 class="form-title">Reset Your Password</h2>
          <p class="form-description">Don't worry, it happens to the best of us. Enter your email address below and we'll send you a link to reset your password.</p>
          
          {% form 'recover_customer_password', class: 'reset-form', id: 'reset-form' %}
            <!-- Shopify Form Messages -->
            {% if form.errors %}
              <div class="form-errors">
                <h4>Please correct the following errors:</h4>
                <ul>
                  {% for field in form.errors %}
                    <li>{{ field | capitalize }} {{ form.errors.messages[field] }}</li>
                  {% endfor %}
                </ul>
              </div>
            {% endif %}

            {% if form.posted_successfully? %}
              <div class="form-success">
                <div class="success-icon">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                    <polyline points="22,4 12,14.01 9,11.01"></polyline>
                  </svg>
                </div>
                <h3>Check Your Email</h3>
                <p>We've sent a password reset link to your email address. Please check your email and click the link to reset your password.</p>
              </div>
            {% endif %}

            {% unless form.posted_successfully? %}
            <div class="form-group">
              <label for="recover_email">Email Address</label>
              <div class="input-wrapper">
                <svg class="input-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                  <polyline points="22,6 12,13 2,6"></polyline>
                </svg>
                <input type="email" id="recover_email" name="email" placeholder="Enter your email address" value="{{ form.email }}" required>
              </div>
            </div>

            <button type="submit" class="btn btn-primary reset-btn">
              <span class="btn-text">Send Reset Link</span>
              <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="22" y1="2" x2="11" y2="13"></line>
                <polygon points="22,2 15,22 11,13 2,9 22,2"></polygon>
              </svg>
            </button>
            {% endunless %}
          {% endform %}

          <div class="back-to-signin">
            <p>Remember your password?</p>
            <a href="/pages/signin" class="back-link">
              <svg class="back-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M19 12H5"></path>
                <path d="M12 19l-7-7 7-7"></path>
              </svg>
              Back to Sign In
            </a>
          </div>
        </div>

        <!-- Help Section -->
        <div class="help-section">
          <div class="help-content">
            <h3 class="help-title">Need Help?</h3>
            <p class="help-description">If you're having trouble resetting your password, we're here to help.</p>
            <div class="help-options">
              <a href="/pages/contact" class="help-link">
                <svg class="help-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                  <polyline points="22,6 12,13 2,6"></polyline>
                </svg>
                Contact Support
              </a>
              <a href="/pages/help" class="help-link">
                <svg class="help-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="10"></circle>
                  <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"></path>
                  <line x1="12" y1="17" x2="12.01" y2="17"></line>
                </svg>
                Help Center
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
/* Forgot Password Page Styles */
.forgot-password-page {
  min-height: 100vh;
  padding: 4rem 0;
  background: linear-gradient(135deg, #f5f5dc 0%, #ffffff 50%, #f5f5dc 100%);
  position: relative;
  overflow: hidden;
}

/* Form Messages */
.form-errors {
  background: #fef2f2;
  border: 2px solid #ff8800;
  border-radius: 1.2rem;
  padding: 2rem;
  margin-bottom: 3rem;
  color: #ff6600;
}

.form-errors h4 {
  margin: 0 0 1rem 0;
  font-size: 1.6rem;
  font-weight: 600;
  color: #ff6600;
}

.form-errors ul {
  margin: 0;
  padding-left: 2rem;
  list-style-type: disc;
}

.form-errors li {
  margin-bottom: 0.5rem;
  font-size: 1.4rem;
}

.form-success {
  background: #f0fdf4;
  border: 2px solid #ff8800;
  border-radius: 1.2rem;
  padding: 3rem;
  margin-bottom: 3rem;
  text-align: center;
  color: #16a34a;
}

.form-success .success-icon {
  width: 6rem;
  height: 6rem;
  background: linear-gradient(135deg, #ff8800, #ff6600);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 2rem;
  color: #ffffff;
  box-shadow: 0 8px 24px rgba(255, 136, 0, 0.3);
}

.form-success .success-icon svg {
  width: 3rem;
  height: 3rem;
}

.form-success h3 {
  font-size: 2rem;
  margin-bottom: 1rem;
  color: #ff8800;
  font-weight: 600;
}

.form-success p {
  font-size: 1.4rem;
  line-height: 1.6;
  margin: 0;
  color: #666666;
}

.forgot-password-page::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: 
    radial-gradient(circle at 20% 20%, rgba(255, 136, 0, 0.1) 0%, transparent 50%),
    radial-gradient(circle at 80% 80%, rgba(255, 102, 0, 0.1) 0%, transparent 50%);
  pointer-events: none;
}

.page-header {
  text-align: center;
  margin-bottom: 4rem;
  position: relative;
  z-index: 1;
}

.page-title {
  font-size: 4.5rem;
  margin-bottom: 1.6rem;
  color: #1a1a1a;
  background: linear-gradient(135deg, #ff8800, #ff6600);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  text-shadow: 0 2px 4px rgba(255, 136, 0, 0.1);
}

.page-description {
  font-size: 1.6rem;
  color: #666666;
  max-width: 60rem;
  margin: 0 auto;
  line-height: 1.6;
  opacity: 0.8;
}

.forgot-password-content {
  max-width: 50rem;
  margin: 0 auto;
  position: relative;
  z-index: 1;
}

.forgot-password-card {
  background: #ffffff;
  border-radius: 2rem;
  box-shadow: 0 20px 40px rgba(255, 136, 0, 0.15);
  overflow: hidden;
  border: 2px solid rgba(255, 136, 0, 0.1);
}

.reset-form-section {
  padding: 4rem;
  text-align: center;
}

.reset-icon {
  width: 8rem;
  height: 8rem;
  background: linear-gradient(135deg, #ff8800, #ff6600);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 2rem;
  color: #ffffff;
  box-shadow: 0 8px 24px rgba(255, 136, 0, 0.3);
}

.reset-icon svg {
  width: 4rem;
  height: 4rem;
}

.form-title {
  font-size: 2.4rem;
  margin-bottom: 1rem;
  color: #1a1a1a;
  background: linear-gradient(135deg, #ff8800, #ff6600);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.form-description {
  font-size: 1.4rem;
  color: #666666;
  margin-bottom: 3rem;
  line-height: 1.6;
}

.reset-form {
  margin-bottom: 3rem;
}

.form-group {
  margin-bottom: 2rem;
  text-align: left;
}

.form-group label {
  display: block;
  font-size: 1.4rem;
  font-weight: 600;
  color: #333333;
  margin-bottom: 0.8rem;
}

.input-wrapper {
  position: relative;
}

.input-icon {
  position: absolute;
  left: 1.6rem;
  top: 50%;
  transform: translateY(-50%);
  width: 2rem;
  height: 2rem;
  color: #999999;
  z-index: 2;
}

.form-group input {
  width: 100%;
  padding: 1.4rem 1.6rem 1.4rem 5rem;
  border: 2px solid #e5e5e5;
  border-radius: 1.2rem;
  font-size: 1.4rem;
  transition: all 0.3s ease;
  background: #ffffff;
}

.form-group input:focus {
  outline: none;
  border-color: #ff8800;
  box-shadow: 0 0 0 3px rgba(255, 136, 0, 0.2);
}

.form-group input:focus + .input-icon {
  color: #ff8800;
}

.reset-btn {
  width: 100%;
  background: linear-gradient(135deg, #ff8800, #ff6600);
  color: #ffffff;
  border: none;
  padding: 1.6rem 2rem;
  border-radius: 1.2rem;
  font-size: 1.6rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 1rem;
  box-shadow: 0 4px 15px rgba(255, 136, 0, 0.3);
  position: relative;
  overflow: hidden;
}

.reset-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.6s;
}

.reset-btn:hover::before {
  left: 100%;
}

.reset-btn:hover {
  background: linear-gradient(135deg, #ff6600, #ff4400);
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(255, 136, 0, 0.4);
}

.reset-btn:active {
  transform: translateY(0);
}

.btn-icon {
  width: 2rem;
  height: 2rem;
}

.back-to-signin {
  text-align: center;
}

.back-to-signin p {
  font-size: 1.4rem;
  color: #666666;
  margin-bottom: 1rem;
}

.back-link {
  display: inline-flex;
  align-items: center;
  gap: 0.8rem;
  color: #ff8800;
  text-decoration: none;
  font-size: 1.4rem;
  font-weight: 500;
  transition: all 0.3s ease;
}

.back-link:hover {
  color: #ff6600;
  transform: translateX(-4px);
  text-shadow: 0 0 8px rgba(255, 136, 0, 0.3);
}

.back-icon {
  width: 1.6rem;
  height: 1.6rem;
}

/* Success Section */
.success-section {
  padding: 4rem;
  text-align: center;
}

.success-icon {
  width: 8rem;
  height: 8rem;
  background: linear-gradient(135deg, #ff8800, #ff6600);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 2rem;
  color: #ffffff;
}

.success-icon svg {
  width: 4rem;
  height: 4rem;
}

.success-title {
  font-size: 2.4rem;
  margin-bottom: 1rem;
  color: #333333;
  background: linear-gradient(135deg, #ff8800, #ff6600);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.success-description {
  font-size: 1.4rem;
  color: #666666;
  margin-bottom: 1rem;
  line-height: 1.6;
}

.success-note {
  font-size: 1.3rem;
  color: #666666;
  margin-bottom: 3rem;
  line-height: 1.6;
}

.success-actions {
  display: flex;
  gap: 1.5rem;
  justify-content: center;
}

.resend-btn {
  background: #ffffff;
  color: #333333;
  border: 2px solid #e5e5e5;
  padding: 1.4rem 2rem;
  border-radius: 1.2rem;
  font-size: 1.4rem;
  font-weight: 600;
  text-decoration: none;
  display: inline-flex;
  align-items: center;
  gap: 1rem;
  transition: all 0.3s ease;
  cursor: pointer;
}

.resend-btn:hover {
  border-color: #ff8800;
  color: #ff8800;
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(255, 136, 0, 0.1);
}

.back-to-signin-btn {
  background: linear-gradient(135deg, #ff8800, #ff6600);
  color: #ffffff;
  border: none;
  padding: 1.4rem 2rem;
  border-radius: 1.2rem;
  font-size: 1.4rem;
  font-weight: 600;
  text-decoration: none;
  display: inline-flex;
  align-items: center;
  gap: 1rem;
  transition: all 0.3s ease;
  box-shadow: 0 4px 15px rgba(255, 136, 0, 0.3);
}

.back-to-signin-btn:hover {
  background: linear-gradient(135deg, #ff6600, #ff4400);
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(255, 136, 0, 0.4);
  color: #ffffff;
}

/* Help Section */
.help-section {
  background: linear-gradient(135deg, #ff8800, #ff6600);
  padding: 3rem;
  text-align: center;
  color: #ffffff;
}

.help-title {
  font-size: 2rem;
  margin-bottom: 1rem;
  color: #ffffff;
}

.help-description {
  font-size: 1.4rem;
  margin-bottom: 2rem;
  opacity: 0.9;
  line-height: 1.6;
}

.help-options {
  display: flex;
  gap: 2rem;
  justify-content: center;
}

.help-link {
  display: flex;
  align-items: center;
  gap: 0.8rem;
  color: #ffffff;
  text-decoration: none;
  font-size: 1.4rem;
  font-weight: 500;
  padding: 1rem 1.5rem;
  border: 2px solid rgba(255, 255, 255, 0.3);
  border-radius: 1rem;
  transition: all 0.3s ease;
  backdrop-filter: blur(10px);
}

.help-link:hover {
  background: rgba(255, 255, 255, 0.1);
  border-color: rgba(255, 255, 255, 0.5);
  transform: translateY(-2px);
  color: #ffffff;
}

.help-icon {
  width: 1.8rem;
  height: 1.8rem;
}

/* Responsive Design */
@media (max-width: 768px) {
  .forgot-password-page {
    padding: 2rem 0;
  }

  .page-title {
    font-size: 3.6rem;
  }

  .reset-form-section,
  .success-section {
    padding: 3rem 2rem;
  }

  .help-section {
    padding: 2rem;
  }

  .success-actions {
    flex-direction: column;
    align-items: center;
  }

  .help-options {
    flex-direction: column;
    align-items: center;
  }
}

@media (max-width: 480px) {
  .page-title {
    font-size: 3rem;
  }

  .reset-form-section,
  .success-section {
    padding: 2rem 1.5rem;
  }

  .help-section {
    padding: 1.5rem;
  }
}
</style>

<script>
// Forgot Password page functionality
document.addEventListener('DOMContentLoaded', function() {
  // Form submission - Let Shopify handle the submission
  const resetForm = document.getElementById('reset-form');
  const resetBtn = document.querySelector('.reset-btn');
  const btnText = resetBtn.querySelector('.btn-text');

  if (resetForm) {
    resetForm.addEventListener('submit', function(e) {
      // Add loading state
      resetBtn.disabled = true;
      btnText.textContent = 'Sending...';
      
      // Form will submit normally to Shopify's endpoint
      // Shopify will handle success/error responses and redirects
    });
  }
});
</script>
