                          <div class="product-colors">
                            {% for value in option.values limit: 4 %}
                              <span class="color-swatch" style="background: {{ value | downcase }};" title="{{ value }}"></span>
                            {% endfor %}
                          </div>
                        {% endif %}
                      {% endfor %}
                    </div>
                  </div>
                </div>
              {% endfor %}
