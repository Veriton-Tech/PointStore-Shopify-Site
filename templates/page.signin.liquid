{% comment %} 
      Sign In page template
{% endcomment %}

<div class="signin-page">
  <div class="container">
    <!-- Page Header -->
    <div class="page-header">
      <h1 class="page-title">Sign In</h1>
      <p class="page-description">Welcome back! Please sign in to your account</p>
    </div>

    <!-- Sign In Content -->
    <div class="signin-content">
      <div class="signin-card">
        <!-- Sign In Form -->
        <div class="signin-form-section">
          <h2 class="form-title">Sign In to Your Account</h2>

          {% form 'customer_login', class: 'signin-form', id: 'signin-form' %}
            <!-- Shopify Form Errors -->
            {% if form.errors %}
              <div class="form-errors">
                <h4>Please correct the following errors:</h4>
                <ul>
                  {% for field in form.errors %}
                    <li>{{ field | capitalize }} {{ form.errors.messages[field] }}</li>
                  {% endfor %}
                </ul>
              </div>
            {% endif %}
            <div class="form-group">
              <label for="customer_email">Email Address</label>
              <div class="input-wrapper">
                <svg
                  class="input-icon"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2">
                  <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                  <polyline points="22,6 12,13 2,6"></polyline>
                </svg>
                <input
                  type="email"
                  id="customer_email"
                  name="customer[email]"
                  placeholder="Enter your email"
                  value="{{ form.email }}"
                  required>
              </div>
            </div>

            <div class="form-group">
              <label for="customer_password">Password</label>
              <div class="input-wrapper">
                <svg
                  class="input-icon"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2">
                  <rect
                    x="3"
                    y="11"
                    width="18"
                    height="11"
                    rx="2"
                    ry="2"></rect>
                  <circle
                    cx="12"
                    cy="16"
                    r="1"></circle>
                  <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                </svg>
                <input
                  type="password"
                  id="customer_password"
                  name="customer[password]"
                  placeholder="Enter your password"
                  required>
                <button
                  type="button"
                  class="password-toggle"
                  id="password-toggle">
                  <svg
                    class="eye-icon"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2">
                    <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                    <circle
                      cx="12"
                      cy="12"
                      r="3"></circle>
                  </svg>
                </button>
              </div>
            </div>

            <div class="form-options">
              <div class="remember-me">
                <input
                  type="checkbox"
                  id="remember"
                  name="remember">
                <label for="remember">Remember me</label>
              </div>
              <a href="/pages/forgot-password" class="forgot-password">Forgot Password?</a>
            </div>

            <button type="submit" class="btn btn-primary signin-btn">
              <span class="btn-text">Sign In</span>
              <svg
                class="btn-icon"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2">
                <path d="M15 3h4a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-4"></path>
                <polyline points="10,17 15,12 10,7"></polyline>
                <line
                  x1="15"
                  y1="12"
                  x2="3"
                  y2="12"></line>
              </svg>
            </button>
          {% endform %}
        </div>

        <!-- Sign Up Section -->
        <div class="signup-section">
          <div class="signup-content">
            <h3 class="signup-title">New to our store?</h3>
            <p class="signup-description">Create an account to get started with your shopping journey</p>
            <a href="/pages/create-account" class="btn btn-secondary signup-btn">
              <span>Create Account</span>
              <svg
                class="btn-icon"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2">
                <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                <circle
                  cx="8.5"
                  cy="7"
                  r="4"></circle>
                <line
                  x1="20"
                  y1="8"
                  x2="20"
                  y2="14"></line>
                <line
                  x1="23"
                  y1="11"
                  x2="17"
                  y2="11"></line>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  /* Sign In Page Styles */
  .signin-page {
    min-height: 100vh;
    padding: 4rem 0;
    background: linear-gradient(135deg, #f5f5dc 0%, #ffffff 50%, #f5f5dc 100%);
    position: relative;
    overflow: hidden;
  }

  /* Form Errors */
  .form-errors {
    background: #fef2f2;
    border: 2px solid #ff8800;
    border-radius: 1.2rem;
    padding: 2rem;
    margin-bottom: 3rem;
    color: #ff6600;
  }

  .form-errors h4 {
    margin: 0 0 1rem 0;
    font-size: 1.6rem;
    font-weight: 600;
    color: #ff6600;
  }

  .form-errors ul {
    margin: 0;
    padding-left: 2rem;
    list-style-type: disc;
  }

  .form-errors li {
    margin-bottom: 0.5rem;
    font-size: 1.4rem;
  }

  .signin-page::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: 
      radial-gradient(circle at 20% 20%, rgba(255, 136, 0, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 80% 80%, rgba(255, 102, 0, 0.1) 0%, transparent 50%);
    pointer-events: none;
  }

  .page-header {
    text-align: center;
    margin-bottom: 4rem;
    position: relative;
    z-index: 1;
  }

  .page-title {
    font-size: 4.5rem;
    margin-bottom: 1.6rem;
    color: #1a1a1a;
    background: linear-gradient(135deg, #ff8800, #ff6600);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-shadow: 0 2px 4px rgba(255, 136, 0, 0.1);
  }

  .page-description {
    font-size: 1.6rem;
    color: #666666;
    opacity: 0.8;
  }

  .signin-content {
    max-width: 50rem;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .signin-card {
    background: var(--white);
    border-radius: 2rem;
    box-shadow: 0 20px 40px rgba(255, 136, 0, 0.15);
    overflow: hidden;
    border: 2px solid rgba(255, 136, 0, 0.1);
  }

  .signin-form-section {
    padding: 4rem;
  }

  .form-title {
    font-size: 2.4rem;
    margin-bottom: 3rem;
    color: #1a1a1a;
    text-align: center;
    background: linear-gradient(135deg, #ff8800, #ff6600);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .signin-form {
    margin-bottom: 3rem;
  }

  .form-group {
    margin-bottom: 2rem;
  }

  .form-group label {
    display: block;
    font-size: 1.4rem;
    font-weight: 600;
    color: var(--gray-700);
    margin-bottom: 0.8rem;
  }

  .input-wrapper {
    position: relative;
  }

  .input-icon {
    position: absolute;
    left: 1.6rem;
    top: 50%;
    transform: translateY(-50%);
    width: 2rem;
    height: 2rem;
    color: var(--gray-400);
    z-index: 2;
  }

  .form-group input {
    width: 100%;
    padding: 1.4rem 1.6rem 1.4rem 5rem;
    border: 2px solid var(--gray-200);
    border-radius: 1.2rem;
    font-size: 1.4rem;
    transition: all 0.3s ease;
    background: var(--white);
  }

  .form-group input:focus {
    outline: none;
    border-color: #ff8800;
    box-shadow: 0 0 0 3px rgba(255, 136, 0, 0.2);
  }

  .form-group input:focus + .input-icon {
    color: #ff8800;
  }

  .password-toggle {
    position: absolute;
    right: 1.6rem;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    cursor: pointer;
    color: var(--gray-400);
    transition: color 0.3s ease;
  }

  .password-toggle:hover {
    color: #ff8800;
  }

  .eye-icon {
    width: 2rem;
    height: 2rem;
  }

  .form-options {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 3rem;
  }

  .remember-me {
    display: flex;
    align-items: center;
    gap: 0.8rem;
  }

  .remember-me input[type="checkbox"] {
    width: 1.8rem;
    height: 1.8rem;
    accent-color: #ff8800;
  }

  .remember-me label {
    font-size: 1.4rem;
    color: var(--gray-600);
    margin: 0;
    cursor: pointer;
  }

  .forgot-password {
    color: #ff8800;
    text-decoration: none;
    font-size: 1.4rem;
    font-weight: 500;
    transition: color 0.3s ease;
  }

  .forgot-password:hover {
    color: #ff6600;
    text-shadow: 0 0 8px rgba(255, 136, 0, 0.3);
  }

  .signin-btn {
    width: 100%;
    background: linear-gradient(135deg, #ff8800, #ff6600);
    color: var(--white);
    border: none;
    padding: 1.6rem 2rem;
    border-radius: 1.2rem;
    font-size: 1.6rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    box-shadow: 0 6px 20px rgba(255, 136, 0, 0.3);
    position: relative;
    overflow: hidden;
  }

  .signin-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.6s;
  }

  .signin-btn:hover::before {
    left: 100%;
  }

  .signin-btn:hover {
    background: linear-gradient(135deg, #ff6600, #ff4400);
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(255, 136, 0, 0.4);
  }

  .signin-btn:active {
    transform: translateY(0);
  }

  .btn-icon {
    width: 2rem;
    height: 2rem;
  }

  .signup-section {
    background: linear-gradient(135deg, #ff8800, #ff6600);
    padding: 3rem;
    text-align: center;
    color: var(--white);
  }

  .signup-title {
    font-size: 2rem;
    margin-bottom: 1rem;
    color: var(--white);
  }

  .signup-description {
    font-size: 1.4rem;
    margin-bottom: 2rem;
    opacity: 0.9;
    line-height: 1.6;
  }

  .signup-btn {
    background: rgba(255, 255, 255, 0.2);
    color: var(--white);
    border: 2px solid rgba(255, 255, 255, 0.3);
    padding: 1.4rem 2rem;
    border-radius: 1.2rem;
    font-size: 1.4rem;
    font-weight: 600;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 1rem;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
  }

  .signup-btn:hover {
    background: rgba(255, 255, 255, 0.3);
    border-color: rgba(255, 255, 255, 0.5);
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    color: var(--white);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .signin-page {
      padding: 2rem 0;
    }

    .page-title {
      font-size: 3.6rem;
    }

    .signin-form-section {
      padding: 3rem 2rem;
    }

    .signup-section {
      padding: 2rem;
    }

    .form-options {
      flex-direction: column;
      gap: 1rem;
      align-items: flex-start;
    }
  }

  @media (max-width: 480px) {
    .page-title {
      font-size: 3rem;
    }

    .signin-form-section {
      padding: 2rem 1.5rem;
    }

    .signup-section {
      padding: 1.5rem;
    }
  }
</style>

<script>
  // Sign In page functionality
  document.addEventListener('DOMContentLoaded', function() {
  // Password toggle functionality
  const passwordToggle = document.getElementById('password-toggle');
  const passwordInput = document.getElementById('customer_password');
  const eyeIcon = passwordToggle.querySelector('.eye-icon');
  
  if (passwordToggle && passwordInput) {
    passwordToggle.addEventListener('click', function() {
      const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
      passwordInput.setAttribute('type', type);
      
      // Toggle eye icon
      if (type === 'text') {
        eyeIcon.innerHTML = `
          <path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24"></path>
          <line x1="1" y1="1" x2="23" y2="23"></line>
        `;
      } else {
        eyeIcon.innerHTML = `
          <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
          <circle cx="12" cy="12" r="3"></circle>
        `;
      }
    });
  }
  
  // Form submission - Let Shopify handle the submission
  const signinForm = document.getElementById('signin-form');
  const signinBtn = document.querySelector('.signin-btn');
  const btnText = signinBtn.querySelector('.btn-text');
  
  if (signinForm) {
    signinForm.addEventListener('submit', function(e) {
      // Add loading state
      signinBtn.disabled = true;
      btnText.textContent = 'Signing In...';
      
      // Form will submit normally to Shopify's endpoint
      // Shopify will handle success/error responses and redirects
    });
  }
  });
</script>