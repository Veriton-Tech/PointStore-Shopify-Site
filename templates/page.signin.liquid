{% comment %} 
      Sign In page template
{% endcomment %}

<div class="signin-page">
  <div class="container">
    <!-- Page Header -->
    <div class="page-header">
      <h1 class="page-title">Sign In</h1>
      <p class="page-description">Welcome back! Please sign in to your account</p>
    </div>

    <!-- Sign In Content -->
    <div class="signin-content">
      <div class="signin-card">
        <!-- Sign In Form -->
        <div class="signin-form-section">
          <h2 class="form-title">Sign In to Your Account</h2>

          <form class="signin-form" id="signin-form">
            <div class="form-group">
              <label for="email">Email Address</label>
              <div class="input-wrapper">
                <svg
                  class="input-icon"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2">
                  <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                  <polyline points="22,6 12,13 2,6"></polyline>
                </svg>
                <input
                  type="email"
                  id="email"
                  name="email"
                  placeholder="Enter your email"
                  required>
              </div>
            </div>

            <div class="form-group">
              <label for="password">Password</label>
              <div class="input-wrapper">
                <svg
                  class="input-icon"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2">
                  <rect
                    x="3"
                    y="11"
                    width="18"
                    height="11"
                    rx="2"
                    ry="2"></rect>
                  <circle
                    cx="12"
                    cy="16"
                    r="1"></circle>
                  <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                </svg>
                <input
                  type="password"
                  id="password"
                  name="password"
                  placeholder="Enter your password"
                  required>
                <button
                  type="button"
                  class="password-toggle"
                  id="password-toggle">
                  <svg
                    class="eye-icon"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2">
                    <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                    <circle
                      cx="12"
                      cy="12"
                      r="3"></circle>
                  </svg>
                </button>
              </div>
            </div>

            <div class="form-options">
              <div class="remember-me">
                <input
                  type="checkbox"
                  id="remember"
                  name="remember">
                <label for="remember">Remember me</label>
              </div>
              <a href="/pages/forgot-password" class="forgot-password">Forgot Password?</a>
            </div>

            <button type="submit" class="btn btn-primary signin-btn">
              <span class="btn-text">Sign In</span>
              <svg
                class="btn-icon"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2">
                <path d="M15 3h4a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-4"></path>
                <polyline points="10,17 15,12 10,7"></polyline>
                <line
                  x1="15"
                  y1="12"
                  x2="3"
                  y2="12"></line>
              </svg>
            </button>
          </form>

          <div class="divider">
            <span>or</span>
          </div>

          <!-- Social Sign In -->
          <div class="social-signin">
            <button class="social-btn google-btn">
              <svg
                class="social-icon"
                viewBox="0 0 24 24"
                fill="currentColor">
                <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" />
                <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" />
                <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" />
                <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" />
              </svg>
              Continue with Google
            </button>
            <button class="social-btn facebook-btn">
              <svg
                class="social-icon"
                viewBox="0 0 24 24"
                fill="currentColor">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z" />
              </svg>
              Continue with Facebook
            </button>
          </div>
        </div>

        <!-- Sign Up Section -->
        <div class="signup-section">
          <div class="signup-content">
            <h3 class="signup-title">New to our store?</h3>
            <p class="signup-description">Create an account to get started with your shopping journey</p>
            <a href="/pages/create-account" class="btn btn-secondary signup-btn">
              <span>Create Account</span>
              <svg
                class="btn-icon"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2">
                <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                <circle
                  cx="8.5"
                  cy="7"
                  r="4"></circle>
                <line
                  x1="20"
                  y1="8"
                  x2="20"
                  y2="14"></line>
                <line
                  x1="23"
                  y1="11"
                  x2="17"
                  y2="11"></line>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  /* Sign In Page Styles */
  .signin-page {
    min-height: 100vh;
    padding: 4rem 0;
    background: linear-gradient(135deg, #f5f5f5 0%, #e5e5e5 100%);
    position: relative;
    overflow: hidden;
  }

  .signin-page::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('data:image/svg+xml, <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="dots" width="20" height="20" patternUnits="userSpaceOnUse"><circle cx="10" cy="10" r="1" fill="%23dc2626" opacity="0.05"/></pattern></defs><rect width="100" height="100" fill="url(%23dots)"/></svg>');
    opacity: 0.3;
    pointer-events: none;
  }

  .page-header {
    text-align: center;
    margin-bottom: 4rem;
    position: relative;
    z-index: 1;
  }

  .page-title {
    font-size: 4.8rem;
    margin-bottom: 1.6rem;
    color: var(--gray-700);
    background: linear-gradient(135deg, #dc2626, #000000);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .page-description {
    font-size: 1.6rem;
    color: var(--gray-500);
  }

  .signin-content {
    max-width: 50rem;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .signin-card {
    background: var(--white);
    border-radius: 2rem;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    border: 1px solid rgba(220, 38, 38, 0.1);
  }

  .signin-form-section {
    padding: 4rem;
  }

  .form-title {
    font-size: 2.4rem;
    margin-bottom: 3rem;
    color: var(--gray-700);
    text-align: center;
    background: linear-gradient(135deg, #dc2626, #000000);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .signin-form {
    margin-bottom: 3rem;
  }

  .form-group {
    margin-bottom: 2rem;
  }

  .form-group label {
    display: block;
    font-size: 1.4rem;
    font-weight: 600;
    color: var(--gray-700);
    margin-bottom: 0.8rem;
  }

  .input-wrapper {
    position: relative;
  }

  .input-icon {
    position: absolute;
    left: 1.6rem;
    top: 50%;
    transform: translateY(-50%);
    width: 2rem;
    height: 2rem;
    color: var(--gray-400);
    z-index: 2;
  }

  .form-group input {
    width: 100%;
    padding: 1.4rem 1.6rem 1.4rem 5rem;
    border: 2px solid var(--gray-200);
    border-radius: 1.2rem;
    font-size: 1.4rem;
    transition: all 0.3s ease;
    background: var(--white);
  }

  .form-group input:focus {
    outline: none;
    border-color: var(--primary-light);
    box-shadow: 0 0 0 3px rgba(220, 38, 38, 0.1);
  }

  .form-group input:focus + .input-icon {
    color: var(--primary-light);
  }

  .password-toggle {
    position: absolute;
    right: 1.6rem;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    cursor: pointer;
    color: var(--gray-400);
    transition: color 0.3s ease;
  }

  .password-toggle:hover {
    color: var(--primary-light);
  }

  .eye-icon {
    width: 2rem;
    height: 2rem;
  }

  .form-options {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 3rem;
  }

  .remember-me {
    display: flex;
    align-items: center;
    gap: 0.8rem;
  }

  .remember-me input[type="checkbox"] {
    width: 1.8rem;
    height: 1.8rem;
    accent-color: var(--primary-light);
  }

  .remember-me label {
    font-size: 1.4rem;
    color: var(--gray-600);
    margin: 0;
    cursor: pointer;
  }

  .forgot-password {
    color: var(--primary-light);
    text-decoration: none;
    font-size: 1.4rem;
    font-weight: 500;
    transition: color 0.3s ease;
  }

  .forgot-password:hover {
    color: var(--primary-dark);
    text-shadow: 0 0 8px rgba(220, 38, 38, 0.3);
  }

  .signin-btn {
    width: 100%;
    background: linear-gradient(135deg, #dc2626, #000000);
    color: var(--white);
    border: none;
    padding: 1.6rem 2rem;
    border-radius: 1.2rem;
    font-size: 1.6rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    box-shadow: 0 4px 15px rgba(220, 38, 38, 0.3);
    position: relative;
    overflow: hidden;
  }

  .signin-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.6s;
  }

  .signin-btn:hover::before {
    left: 100%;
  }

  .signin-btn:hover {
    background: linear-gradient(135deg, #b91c1c, #000000);
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(220, 38, 38, 0.4);
  }

  .signin-btn:active {
    transform: translateY(0);
  }

  .btn-icon {
    width: 2rem;
    height: 2rem;
  }

  .divider {
    text-align: center;
    margin: 3rem 0;
    position: relative;
  }

  .divider::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    height: 1px;
    background: var(--gray-200);
  }

  .divider span {
    background: var(--white);
    padding: 0 2rem;
    color: var(--gray-500);
    font-size: 1.4rem;
    position: relative;
    z-index: 1;
  }

  .social-signin {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .social-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    padding: 1.4rem 2rem;
    border: 2px solid var(--gray-200);
    border-radius: 1.2rem;
    background: var(--white);
    color: var(--gray-700);
    font-size: 1.4rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .social-btn:hover {
    border-color: var(--primary-light);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(220, 38, 38, 0.1);
  }

  .social-icon {
    width: 2rem;
    height: 2rem;
  }

  .google-btn:hover {
    color: #4285f4;
  }

  .facebook-btn:hover {
    color: #1877f2;
  }

  .signup-section {
    background: linear-gradient(135deg, #dc2626, #000000);
    padding: 3rem;
    text-align: center;
    color: var(--white);
  }

  .signup-title {
    font-size: 2rem;
    margin-bottom: 1rem;
    color: var(--white);
  }

  .signup-description {
    font-size: 1.4rem;
    margin-bottom: 2rem;
    opacity: 0.9;
    line-height: 1.6;
  }

  .signup-btn {
    background: rgba(255, 255, 255, 0.2);
    color: var(--white);
    border: 2px solid rgba(255, 255, 255, 0.3);
    padding: 1.4rem 2rem;
    border-radius: 1.2rem;
    font-size: 1.4rem;
    font-weight: 600;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 1rem;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
  }

  .signup-btn:hover {
    background: rgba(255, 255, 255, 0.3);
    border-color: rgba(255, 255, 255, 0.5);
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    color: var(--white);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .signin-page {
      padding: 2rem 0;
    }

    .page-title {
      font-size: 3.6rem;
    }

    .signin-form-section {
      padding: 3rem 2rem;
    }

    .signup-section {
      padding: 2rem;
    }

    .form-options {
      flex-direction: column;
      gap: 1rem;
      align-items: flex-start;
    }
  }

  @media (max-width: 480px) {
    .page-title {
      font-size: 3rem;
    }

    .signin-form-section {
      padding: 2rem 1.5rem;
    }

    .signup-section {
      padding: 1.5rem;
    }
  }
</style>

<script>
  // Sign In page functionality
  document.addEventListener('DOMContentLoaded', function() {
  // Password toggle functionality
  const passwordToggle = document.getElementById('password-toggle');
  const passwordInput = document.getElementById('password');
  const eyeIcon = passwordToggle.querySelector('.eye-icon');
  
  if (passwordToggle && passwordInput) {
    passwordToggle.addEventListener('click', function() {
      const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
      passwordInput.setAttribute('type', type);
      
      // Toggle eye icon
      if (type === 'text') {
        eyeIcon.innerHTML = `
          <path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24"></path>
          <line x1="1" y1="1" x2="23" y2="23"></line>
        `;
      } else {
        eyeIcon.innerHTML = `
          <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
          <circle cx="12" cy="12" r="3"></circle>
        `;
      }
    });
  }
  
  // Form submission
  const signinForm = document.getElementById('signin-form');
  const signinBtn = document.querySelector('.signin-btn');
  const btnText = signinBtn.querySelector('.btn-text');
  
  if (signinForm) {
    signinForm.addEventListener('submit', function(e) {
      e.preventDefault();
      
      // Add loading state
      signinBtn.disabled = true;
      btnText.textContent = 'Signing In...';
      
      // Simulate API call
      setTimeout(() => {
        // Reset button state
        signinBtn.disabled = false;
        btnText.textContent = 'Sign In';
        
        // Show success message (you can replace this with actual authentication logic)
        alert('Sign in successful! (This is a demo)');
      }, 2000);
    });
  }
  
  // Social sign in buttons
  const socialBtns = document.querySelectorAll('.social-btn');
  socialBtns.forEach(btn => {
    btn.addEventListener('click', function(e) {
      e.preventDefault();
      const provider = this.classList.contains('google-btn') ? 'Google' : 'Facebook';
      alert(`${provider} sign in clicked! (This is a demo)`);
    });
  });
  });
</script>