  }
}

@media (max-width: 480px) {
  .hero-banner-section {
    height: 150px !important;
    min-height: 0 !important;
  }

  .hero-title {
    font-size: 3.2rem;
  }

  .hero-subtitle {
    font-size: 1.8rem;
  }
  
  /* Ensure hero images fill the banner completely on all screens */
  /* .hero-bg {
    object-fit: cover;
    width: 100%;
    height: 100%;
    object-position: center center; 
  } */
  
  .hero-indicators {
    bottom: 1.5rem;
  }
  
