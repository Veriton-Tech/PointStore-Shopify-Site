<style>
/* Categories Section */
.categories-scroll-section {
  padding: 3rem 0;
  position: relative;
  overflow: hidden;
}

.categories-scroll-section::before {
  content: '';
  position: absolute;
  inset: 0;
  background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="geometric" width="50" height="50" patternUnits="userSpaceOnUse"><circle cx="25" cy="25" r="1" fill="%23ff8800" opacity="0.03"/><rect x="20" y="20" width="10" height="10" fill="none" stroke="%23ff8800" stroke-width="0.3" opacity="0.05"/></pattern></defs><rect width="100" height="100" fill="url(%23geometric)"/></svg>');
  opacity: 0.4;
  pointer-events: none;
}

.categories-header {
  text-align: center;
  margin-bottom: 3rem;
  position: relative;
  z-index: 1;
}

.categories-title {
  font-size: 3rem;
  margin-bottom: 1rem;
  font-weight: 700;
  background: linear-gradient(135deg, #ff8800, #ff6600);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  text-shadow: 0 2px 4px rgba(255, 136, 0, 0.1);
}

.categories-subtitle {
  font-size: 1.4rem;
  color: #666;
  max-width: 60rem;
  margin: 0 auto;
  opacity: 0.8;
}

/* Vertical Scroll Container */
.categories-scroll-container {
  position: relative;
  overflow-y: scroll;
  padding: 1rem 0;
  max-height: calc(3 * (12rem + 5rem)); /* show only 3 rows */
  scroll-snap-type: y mandatory;
  -webkit-overflow-scrolling: touch;
  scrollbar-width: thin;
  scrollbar-color: rgba(255, 136, 0, 0.5) transparent;
}

.categories-scroll-vertical {
  display: grid;
  grid-template-columns: repeat(6, 1fr);
  gap: 2rem;
  overflow-y: visible;
  padding: 0 1rem;
  scroll-snap-type: y mandatory;
  -webkit-overflow-scrolling: touch;
  scrollbar-width: thin;
  scrollbar-color: rgba(255, 136, 0, 0.5) transparent;
}

.categories-scroll-vertical::-webkit-scrollbar {
  width: 8px;
}

.categories-scroll-vertical::-webkit-scrollbar-track {
  background: transparent;
}

.categories-scroll-vertical::-webkit-scrollbar-thumb {
  background: linear-gradient(180deg, #ff8800, #ff6600);
  border-radius: 10px;
  opacity: 0.6;
}

.categories-scroll-vertical::-webkit-scrollbar-thumb:hover {
  opacity: 1;
}

/* Category Item */
.category-item {
  background: transparent !important;
  border: none !important;
  border-radius: 1.5rem;
  text-align: center;
  transition: transform 0.3s ease;
  scroll-snap-align: start;
}

.category-item:hover {
  transform: translateY(-5px);
}

.category-link {
  display: block;
  color: inherit;
  text-decoration: none;
}

.category-image {
  width: 12rem;
  height: 12rem;
  margin: 0 auto 0.8rem auto;
  border-radius: 50%;
  overflow: hidden;
  /* border: 3px solid rgba(255, 136, 0, 0.08); */
  transition: all 0.3s ease;
}

.category-item:hover .category-image {
  border: 1px solid rgba(255, 136, 0, 0.3);
  transform: scale(1.05);
}

.category-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.category-content {
  padding: 0 0.8rem;
}

.category-name {
  font-size: 1.6rem;
  color: var(--gray-700);
  font-weight: 600;
  margin-bottom: 0.3rem;
  transition: color 0.3s ease;
}

.category-item:hover .category-name {
  color: #ff8800;
}

/* Responsive */
@media (max-width: 1024px) {
  .categories-scroll-vertical {
    grid-template-columns: repeat(4, 1fr);
  }

  .category-image {
    width: 10rem;
    height: 10rem;
  }

  .categories-scroll-container {
    max-height: calc(3 * (10rem + 5rem)); 
  }

}

@media (max-width: 768px) {
  .categories-scroll-vertical {
    grid-template-columns: repeat(4, 1fr);
    gap: 1.5rem;
  }

  .category-image {
    width: 8rem;
    height: 8rem;
  }

  .category-name {
    font-size: 1.3rem;
  }

  .categories-scroll-container {
    max-height: calc(3 * (8rem + 4rem)); 
  }
}

@media (max-width: 480px) {
  .categories-scroll-vertical {
    grid-template-columns: repeat(4, 1fr);
    gap: 1rem;
  }

  .category-image {
    width: 7rem;
    height: 7rem;
  }

  .category-name {
    font-size: 1.1rem;
  }
  .categories-scroll-container {
    max-height: calc(3 * (7rem + 3.5rem)); 
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Simple fade-in on scroll for vertical items
  const observer = new IntersectionObserver(entries => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.style.opacity = '1';
        entry.target.style.transform = 'translateY(0)';
      }
    });
  }, { threshold: 0.1 });

  const items = document.querySelectorAll('.category-item');
  items.forEach(item => {
    item.style.opacity = '0';
    item.style.transform = 'translateY(20px)';
    item.style.transition = 'all 0.5s ease';
    observer.observe(item);
  });
});
</script>
