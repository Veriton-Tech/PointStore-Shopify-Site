<style>
/* Categories Section */
.categories-scroll-section {
  padding: 3rem 0;
  /* background: linear-gradient(135deg, #f5f5dc 0%, #ffffff 25%, #f0f0f0 50%, #f5f5dc 75%, #ffffff 100%); */
  position: relative;
  overflow: hidden;
}

.categories-scroll-section::before {
  content: '';
  position: absolute;
  inset: 0;
  background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="geometric" width="50" height="50" patternUnits="userSpaceOnUse"><circle cx="25" cy="25" r="1" fill="%23ff8800" opacity="0.03"/><rect x="20" y="20" width="10" height="10" fill="none" stroke="%23ff8800" stroke-width="0.3" opacity="0.05"/></pattern></defs><rect width="100" height="100" fill="url(%23geometric)"/></svg>');
  opacity: 0.4;
  pointer-events: none;
}

.categories-header {
  text-align: center;
  margin-bottom: 3rem;
  position: relative;
  z-index: 1;
}

.categories-title {
  font-size: 3rem;
  margin-bottom: 1rem;
  font-weight: 700;
  background: linear-gradient(135deg, #ff8800, #ff6600);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  text-shadow: 0 2px 4px rgba(255, 136, 0, 0.1);
}

.categories-subtitle {
  font-size: 1.4rem;
  color: #666;
  max-width: 60rem;
  margin: 0 auto;
  opacity: 0.8;
}

/* --- GRID LAYOUT (no scroll) --- */
.categories-scroll-container {
  overflow: visible;
  padding: 1rem 0;
}

.categories-scroll {
  display: grid;
  grid-template-columns: repeat(6, 1fr); /* 6 per row desktop */
  gap: 2rem;
  padding: 0;
}

/* Category Item */
.category-item {
  background: transparent !important;
  border: none !important;
  border-radius: 1.5rem;
  text-align: center;
  transition: transform 0.3s ease;
}

.category-item:hover {
  transform: translateY(-5px);
}

.category-link {
  display: block;
  color: inherit;
  text-decoration: none;
}

.category-image {
  width: 12rem;
  height: 12rem;
  margin: 0 auto 0.8rem auto;
  border-radius: 50%;
  overflow: hidden;
  border: 3px solid rgba(255, 136, 0, 0.08);
  transition: all 0.3s ease;
}

.category-item:hover .category-image {
  border-color: rgba(255, 136, 0, 0.3);
  transform: scale(1.05);
}

.category-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.category-content {
  padding: 0 0.8rem;
}

.category-name {
  font-size: 1.6rem;
  color: var(--gray-700);
  font-weight: 600;
  margin-bottom: 0.3rem;
  transition: color 0.3s ease;
  font-weight: 600;
}

.category-item:hover .category-name {
  color: #ff8800;
}

.category-description {
  font-size: 1.1rem;
  color: var(--gray-500);
  margin: 0;
  line-height: 1.3;
}

/* Hide overlay */
.category-overlay {
  display: none !important;
}

/* Remove scroll buttons completely */
.scroll-btn {
  display: none !important;
}

/* --- RESPONSIVE --- */
@media (max-width: 1024px) {
  .categories-scroll {
    grid-template-columns: repeat(6, 1fr); /* 4 per row tablet/mobile */
    gap: 1.5rem;
  }

  .categories-scroll-section {
    padding: 3rem 0;
  }

  .categories-title {
    font-size: 2.4rem;
  }

  .categories-subtitle {
    font-size: 1.1rem;
  }

  .category-image {
    width: 8rem;
    height: 8rem;
  }

  .category-name {
    font-size: 1.2rem;
  }

  .category-description {
    font-size: 1rem;
  }
}

@media (max-width: 600px) {
  .categories-scroll {
    grid-template-columns: repeat(4, 1fr); /* 4 per row even on small mobile */
    gap: 1rem;
  }

  .category-image {
    width: 7rem;
    height: 7rem;
  }

  .category-name {
    font-size: 1.1rem;
  }

  .category-description {
    font-size: 0.9rem;
  }
}

</style>

<script>
// Categories Scroll Functionality
document.addEventListener('DOMContentLoaded', function() {
  const scrollContainer = document.getElementById('categories-scroll');
  const scrollLeftBtn = document.getElementById('scroll-left');
  const scrollRightBtn = document.getElementById('scroll-right');
  
  if (!scrollContainer || !scrollLeftBtn || !scrollRightBtn) return;
  
  const scrollAmount = 350;
  
  scrollLeftBtn.addEventListener('click', function() {
    scrollContainer.scrollBy({
      left: -scrollAmount,
      behavior: 'smooth'
    });
  });
  
  scrollRightBtn.addEventListener('click', function() {
    scrollContainer.scrollBy({
      left: scrollAmount,
      behavior: 'smooth'
    });
  });
  
  // Update button visibility based on scroll position
  function updateButtonVisibility() {
    const { scrollLeft, scrollWidth, clientWidth } = scrollContainer;
    
    scrollLeftBtn.style.opacity = scrollLeft > 0 ? '1' : '0.5';
    scrollRightBtn.style.opacity = scrollLeft < scrollWidth - clientWidth ? '1' : '0.5';
    
    // Disable buttons at extremes
    scrollLeftBtn.disabled = scrollLeft <= 0;
    scrollRightBtn.disabled = scrollLeft >= scrollWidth - clientWidth;
  }
  
  scrollContainer.addEventListener('scroll', updateButtonVisibility);
  updateButtonVisibility();
  
  // Add scroll animations for category items
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
  };
  
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.style.animation = 'slideInLeft 0.6s ease forwards';
        entry.target.style.opacity = '1';
        entry.target.style.transform = 'translateX(0)';
      }
    });
  }, observerOptions);
  
  // Observe category items for scroll animations
  const categoryItems = document.querySelectorAll('.category-item');
  categoryItems.forEach((item, index) => {
    item.style.opacity = '0';
    item.style.transform = 'translateX(50px)';
    item.style.animationDelay = `${index * 0.1}s`;
    observer.observe(item);
  });
  
  // Add hover effects for category items
  categoryItems.forEach(item => {
    item.addEventListener('mouseenter', function() {
      this.style.transform = 'translateY(-8px) scale(1.02)';
    });
    
    item.addEventListener('mouseleave', function() {
      this.style.transform = 'translateY(0) scale(1)';
    });
  });
  
  // Touch/swipe support for mobile
  let startX = 0;
  let isScrolling = false;
  
  scrollContainer.addEventListener('touchstart', function(e) {
    startX = e.touches[0].clientX;
    isScrolling = true;
  });
  
  scrollContainer.addEventListener('touchmove', function(e) {
    if (!isScrolling) return;
    
    const currentX = e.touches[0].clientX;
    const diffX = startX - currentX;
    
    if (Math.abs(diffX) > 50) {
      if (diffX > 0) {
        // Swipe left - scroll right
        scrollContainer.scrollBy({
          left: scrollAmount,
          behavior: 'smooth'
        });
      } else {
        // Swipe right - scroll left
        scrollContainer.scrollBy({
          left: -scrollAmount,
          behavior: 'smooth'
        });
      }
      isScrolling = false;
    }
  });
  
  scrollContainer.addEventListener('touchend', function() {
    isScrolling = false;
  });
});
</script>
