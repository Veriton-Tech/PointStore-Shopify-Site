{% comment %}
  Footer section with links and information
{% endcomment %}

<footer class="footer">
  <div class="container">
    <!-- Footer Main Content -->
    <div class="footer-content">
      <!-- Company Info -->
      <div class="footer-section">
        <div class="footer-logo">
          {% if settings.logo != blank %}
            <img
              src="{{ settings.logo | img_url: '150x' }}"
              alt="{{ shop.name }}"
              class="footer-logo-image">
          {% else %}
            <img
              src="{{ 'logo.jpg' | asset_url }}"
              alt="{{ shop.name }}"
              class="footer-logo-image">
          {% endif %}
        </div>
        <p class="footer-description">
          Discover the latest fashion trends with our curated collection of clothing and accessories.    
          Shop the best styles for women, men, and kids.
        </p>
        <div class="footer-social">
          <h4>Follow Us</h4>
          <div class="social-links">
            <a
              href="#"
              class="social-link"
              aria-label="Facebook">
              <i class="fa-brands fa-facebook-f"></i>
            </a>
            <a
              href="#"
              class="social-link"
              aria-label="Instagram">
              <i class="fa-brands fa-instagram"></i>
            </a>
            <a
              href="#"
              class="social-link"
              aria-label="Twitter">
              <i class="fa-brands fa-twitter"></i>
            </a>
            <a
              href="#"
              class="social-link"
              aria-label="TikTok">
              <i class="fa-brands fa-tiktok"></i>
            </a>
          </div>
        </div>
      </div>


      <!-- Customer Service -->
      <div class="footer-section">
        <h4>Customer Service</h4>
        <ul class="footer-links">
          <li>
            <a href="/pages/contact">Contact Us</a>
          </li>
          <li>
            <a href="/pages/shipping">Shipping Info</a>
          </li>
          <li>
            <a href="/pages/returns">Returns & Exchanges</a>
          </li>
          <li>
            <a href="/pages/size-guide">Size Guide</a>
          </li>
          <li>
            <a href="/pages/faq">FAQ</a>
          </li>
          <li>
            <a href="/pages/track-order">Track Your Order</a>
          </li>
          <li>
            <a href="/pages/help">Help Center</a>
          </li>
        </ul>
      </div>

      <!-- Company Info -->
      <div class="footer-section">
        <h4>Company</h4>
        <ul class="footer-links">
          <li>
            <a href="/pages/about">About Us</a>
          </li>
          <li>
            <a href="/pages/careers">Careers</a>
          </li>
          <li>
            <a href="/pages/press">Press</a>
          </li>
          <li>
            <a href="/pages/sustainability">Sustainability</a>
          </li>
          <li>
            <a href="/pages/partnerships">Partnerships</a>
          </li>
        </ul>
        <!-- Footer Newsletter (moved here after Partnerships) -->
        <div class="footer-newsletter">
          <h5 class="footer-newsletter-title">Sign up for PS style news</h5>

          <!-- Email subscribe form -->
          <form id="footer-newsletter-email-form" class="footer-newsletter-form footer-newsletter-form--single">
            <input
              type="email"
              name="contact[email]"
              class="footer-newsletter-input"
              placeholder="Enter your email address"
              required>
            <button type="submit" class="footer-newsletter-btn">Subscribe</button>
          </form>

          <!-- Phone subscribe form -->
          <form id="footer-newsletter-phone-form" class="footer-newsletter-form footer-newsletter-form--phone">
            <div class="footer-newsletter-phone-group">
              <select name="contact[country_code]" class="footer-country-code-select" aria-label="Country code">
                <option value="+1">+1</option>
                <option value="+44">+44</option>
                <option value="+61">+61</option>
                <option value="+91">+91</option>
                <option value="+971">+971</option>
              </select>
              <input
                type="tel"
                name="contact[phone]"
                class="footer-phone-input"
                placeholder="Contact number"
                required>
            </div>
            <button type="submit" class="footer-newsletter-btn">Subscribe</button>
          </form>

          <!-- WhatsApp subscribe form (matches phone styling) -->
          <form id="footer-newsletter-whatsapp-form" class="footer-newsletter-form footer-newsletter-form--phone">
            <div class="footer-newsletter-phone-group">
              <select name="contact[whatsapp_country_code]" class="footer-country-code-select" aria-label="WhatsApp country code">
                <option value="+1">+1</option>
                <option value="+44">+44</option>
                <option value="+61">+61</option>
                <option value="+91">+91</option>
                <option value="+971">+971</option>
              </select>
              <input
                type="tel"
                name="contact[whatsapp]"
                class="footer-phone-input footer-whatsapp-input"
                placeholder="WhatsApp number"
                required>
            </div>
            <button type="submit" class="footer-newsletter-btn">Subscribe</button>
          </form>
          <p class="footer-newsletter-policy">By clicking the SUBSCRIBE button, you are agreeing to our <a href="/pages/privacy-policy">Privacy & Cookie Policy</a></p>
        </div>
      </div>
    </div>

    <!-- Payment Methods -->
    <div class="footer-payment">
      <h4>We Accept</h4>
      <div class="payment-methods">
        <div class="payment-method">
          <svg
            class="payment-icon"
            viewBox="0 0 24 24"
            fill="currentColor">
            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2zm0 2v12h16V6H4zm2 2h12v2H6V8zm0 4h12v2H6v-2z" />
          </svg>
          <span>Visa</span>
        </div>
        <div class="payment-method">
          <svg
            class="payment-icon"
            viewBox="0 0 24 24"
            fill="currentColor">
            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2zm0 2v12h16V6H4zm2 2h12v2H6V8zm0 4h12v2H6v-2z" />
          </svg>
          <span>Mastercard</span>
        </div>
        <div class="payment-method">
          <svg
            class="payment-icon"
            viewBox="0 0 24 24"
            fill="currentColor">
            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2zm0 2v12h16V6H4zm2 2h12v2H6V8zm0 4h12v2H6v-2z" />
          </svg>
          <span>PayPal</span>
        </div>
        <div class="payment-method">
          <svg
            class="payment-icon"
            viewBox="0 0 24 24"
            fill="currentColor">
            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2zm0 2v12h16V6H4zm2 2h12v2H6V8zm0 4h12v2H6v-2z" />
          </svg>
          <span>Apple Pay</span>
        </div>
        <div class="payment-method">
          <svg
            class="payment-icon"
            viewBox="0 0 24 24"
            fill="currentColor">
            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2zm0 2v12h16V6H4zm2 2h12v2H6V8zm0 4h12v2H6v-2z" />
          </svg>
          <span>Google Pay</span>
        </div>
      </div>
    </div>

    <!-- Footer Bottom -->
    <div class="footer-bottom">
      <div class="footer-bottom-content">
        <div class="footer-copyright">
          <p>&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.</p>
        </div>
        <div class="footer-legal">
          <a href="/pages/privacy-policy">Privacy Policy</a>
          <a href="/pages/privacy-policy">Terms of Service</a>
          <a href="/pages/privacy-policy">Cookie Policy</a>
        </div>
        
      </div>
    </div>
  </div>
</footer>

<style>
  /* Footer Styles */
  .footer {
    background: #ffffff; /* white background */
    color: #111111; /* black text */
    padding: 6rem 0 2rem;
    position: relative;
    overflow: hidden;
  }

  /* remove dark patterned overlay on light footer */
  .footer::before { display: none; }

  .footer-content {
    display: flex;
    flex-wrap: wrap;
    gap: 4rem;
    margin-bottom: 4rem;
    justify-content: space-between;
  }

  .footer-section {
    flex: 1 1 220px;
    min-width: 220px;
    margin-bottom: 2rem;
  }

  .footer-section h4 {
    font-size: 1.8rem;
    margin-bottom: 2rem;
    color: #111111;
    font-weight: 600;
  }

  .footer-logo {
    margin-bottom: 2rem;
  }

  .footer-logo-image {
    height: 4rem;
    width: auto;
  }

  .footer-logo-text {
    font-size: 2.4rem;
    color: var(--white);
    margin: 0;
    background-clip: text;
    font-weight: 900;
  }

  .footer-description {
    color: #333333;
    line-height: 1.6;
    margin-bottom: 2rem;
    font-size: 1.4rem;
  }

  .footer-social h4 {
    font-size: 1.6rem;
    margin-bottom: 1.6rem;
  }

  .social-links {
    display: flex;
    gap: 1.6rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 4rem;
    height: 4rem;
    background: var(--gray-100);
    border: 2px solid var(--gray-200);
    border-radius: 50%;
    color: #111111;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  /* Ensure the icon inside social-link is black by default */
  .social-link i,
  .social-link .icon {
    color: #111111;
  }

  .social-link:hover {
    background: #ff8800;
    border-color: #ff8800;
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(255, 136, 0, 0.2);
    color: #ffffff;
  }

  .social-link .icon {
    width: 2rem;
    height: 2rem;
  }

  .footer-links {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .footer-links li {
    margin-bottom: 1rem;
  }

  .footer-links a {
    color: #111111;
    text-decoration: none;
    font-size: 1.4rem;
    transition: color 0.3s ease;
  }

  .footer-links a:hover {
    color: #ff8800;
  }

  .footer-payment {
    margin-bottom: 3rem;
  }

  .footer-payment h4 {
    font-size: 1.6rem;
    margin-bottom: 2rem;
    color: #111111;
  }

  .payment-methods {
    display: flex;
    gap: 2rem;
    flex-wrap: wrap;
  }

  .payment-method {
    display: flex;
    align-items: center;
    gap: 0.8rem;
    padding: 1rem 1.6rem;
    background: var(--gray-100);
    border: 1px solid var(--gray-200);
    border-radius: 0.8rem;
    color: #111111;
    font-size: 1.2rem;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .payment-method:hover {
    background: #fff6ef;
    border-color: #ffcc99;
    transform: translateY(-2px);
  }

  .payment-icon {
    width: 2rem;
    height: 2rem;
  }

  .footer-bottom {
    border-top: 1px solid var(--gray-200);
    padding-top: 2rem;
    position: relative;
  }

  .footer-bottom-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .footer-copyright p {
    color: #111111;
    font-size: 1.4rem;
    margin: 0;
  }

  .footer-legal {
    display: flex;
    gap: 2rem;
  }

  .footer-legal a {
    color: #111111;
    text-decoration: none;
    font-size: 1.4rem;
    transition: color 0.3s ease;
  }

  .footer-legal a:hover {
    color: #ff8800;
    text-shadow: none;
  }

  .footer-content .footer-section:not(:first-child) a:hover {
    color: #ff8800;
  }

  /* Footer newsletter (compact) */
  .footer-newsletter {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 0.8rem;
    max-width: 42rem; /* make this section a bit bigger */
    margin-top: 3.6rem; /* move it a bit lower (increased) */
  }

  /* Move the title slightly left while keeping forms aligned to the right */
  .footer-newsletter-title {
    align-self: flex-start; /* place title at the left edge of the newsletter container */
    margin-left: 0; /* ensure no extra offset */
    font-size: 1.25rem;
    margin-bottom: 0.6rem;
    color: #111111;
    font-weight: 800; /* increased weight */
  }

  .footer-newsletter-form {
    display: flex;
    width: 100%;
    gap: 0.8rem;
    align-items: center;
  }

  /* Variants: single-line email form and phone-form grouping */
  .footer-newsletter-form--single { flex-wrap: nowrap; }
  .footer-newsletter-form--phone { flex-wrap: nowrap; }

  .footer-newsletter-phone-group {
    display: flex;
    gap: 0.6rem;
    align-items: center;
  }

  .footer-country-code-select {
    appearance: none;
    -webkit-appearance: none;
    padding: 1.2rem 0.8rem;
    border-radius: 0.9rem;
    border: 1px solid var(--gray-200);
    background: #ffffff;
    font-size: 1.1rem;
    color: #111111;
    min-width: 6rem;
  }

  .footer-phone-input {
    padding: 1.6rem 1.6rem; /* match email input */
    border-radius: 1.2rem;
    border: 1px solid var(--gray-200);
    font-size: 1.2rem;
    outline: none;
    background: #ffffff;
    flex: 1 1 auto;
    font-weight: 600;
  }

  .footer-whatsapp-input { /* identical to phone input, kept for semantic clarity */ }

  .footer-newsletter-input {
    flex: 1;
    padding: 1.6rem 1.6rem; /* bigger input */
    border-radius: 1.2rem;
    border: 1px solid var(--gray-200);
    font-size: 1.2rem;
    outline: none;
    background: #ffffff;
    font-weight: 600;
  }

  .footer-newsletter-btn {
    background: #000000; /* black button */
    color: #ffffff;
    border: none;
    padding: 1.2rem 1.8rem; /* bigger button */
    border-radius: 1.2rem;
    font-weight: 900; /* bolder button text */
    font-size: 1.05rem;
    cursor: pointer;
    transition: transform 0.18s ease, box-shadow 0.18s ease, background 0.18s ease;
  }

  .footer-newsletter-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 18px rgba(0,0,0,0.12);
    background: #000000;
  }

  .footer-newsletter-privacy { color: #666666; font-size: 1.1rem; margin: 0; text-align: right; }

  .footer-newsletter-policy {
    color: #666666;
    font-size: 1.05rem;
    margin: 0.6rem 0 0;
    text-align: left;
    font-weight: 600;
  }

  @media (max-width: 1024px) {
    .footer-content {
      gap: 2rem;
    }
  }

  @media (max-width: 768px) {
    .footer-content {
      flex-direction: column;
      gap: 2rem;
    }
    .footer-section {
      min-width: 0;
      width: 100%;
    }
    .footer-bottom-content {
      flex-direction: column;
      gap: 1rem;
      align-items: flex-start;
    }
    .footer-legal {
      gap: 1rem;
      flex-wrap: wrap;
    }
    /* Stack newsletter forms on small screens */
    .footer-newsletter {
      align-items: stretch;
    }
    .footer-newsletter-title { align-self: flex-start; }
    .footer-newsletter-form {
      flex-direction: column;
      gap: 0.8rem;
    }
    .footer-newsletter-phone-group { flex-direction: row; }
  }
</style>