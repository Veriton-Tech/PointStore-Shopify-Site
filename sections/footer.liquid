{% comment %}
  Footer section with links and information
{% endcomment %}

<footer class="footer">
  <div class="container">
    <!-- Footer Main Content -->
    <div class="footer-content">
      <!-- Company Info -->
      <div class="footer-section">
        <div class="footer-logo">
          {% if settings.logo != blank %}
            <img
              src="{{ settings.logo | img_url: '150x' }}"
              alt="{{ shop.name }}"
              class="footer-logo-image">
          {% else %}
            <h3 class="footer-logo-text">{{ shop.name }}</h3>
          {% endif %}
        </div>
        <p class="footer-description">
          Discover the latest fashion trends with our curated collection of clothing and accessories.    
          Shop the best styles for women, men, and kids.
        </p>
        <div class="footer-social">
          <h4>Follow Us</h4>
          <div class="social-links">
            <a
              href="#"
              class="social-link"
              aria-label="Facebook">
              <i class="fa-brands fa-facebook-f"></i>
            </a>
            <a
              href="#"
              class="social-link"
              aria-label="Instagram">
              <i class="fa-brands fa-instagram"></i>
            </a>
            <a
              href="#"
              class="social-link"
              aria-label="Twitter">
              <i class="fa-brands fa-twitter"></i>
            </a>
            <a
              href="#"
              class="social-link"
              aria-label="TikTok">
              <i class="fa-brands fa-tiktok"></i>
            </a>
          </div>
        </div>
      </div>


      <!-- Customer Service -->
      <div class="footer-section">
        <h4>Customer Service</h4>
        <ul class="footer-links">
          <li>
            <a href="/pages/contact">Contact Us</a>
          </li>
          <li>
            <a href="/pages/shipping">Shipping Info</a>
          </li>
          <li>
            <a href="/pages/returns">Returns & Exchanges</a>
          </li>
          <li>
            <a href="/pages/size-guide">Size Guide</a>
          </li>
          <li>
            <a href="/pages/faq">FAQ</a>
          </li>
          <li>
            <a href="/pages/track-order">Track Your Order</a>
          </li>
          <li>
            <a href="/pages/help">Help Center</a>
          </li>
        </ul>
      </div>

      <!-- Company Info -->
      <div class="footer-section">
        <h4>Company</h4>
        <ul class="footer-links">
          <li>
            <a href="/pages/about">About Us</a>
          </li>
          <li>
            <a href="/pages/careers">Careers</a>
          </li>
          <li>
            <a href="/pages/press">Press</a>
          </li>
          <li>
            <a href="/pages/sustainability">Sustainability</a>
          </li>
          <li>
            <a href="/pages/partnerships">Partnerships</a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Payment Methods -->
    <div class="footer-payment">
      <h4>We Accept</h4>
      <div class="payment-methods">
        <div class="payment-method">
          <svg
            class="payment-icon"
            viewBox="0 0 24 24"
            fill="currentColor">
            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2zm0 2v12h16V6H4zm2 2h12v2H6V8zm0 4h12v2H6v-2z" />
          </svg>
          <span>Visa</span>
        </div>
        <div class="payment-method">
          <svg
            class="payment-icon"
            viewBox="0 0 24 24"
            fill="currentColor">
            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2zm0 2v12h16V6H4zm2 2h12v2H6V8zm0 4h12v2H6v-2z" />
          </svg>
          <span>Mastercard</span>
        </div>
        <div class="payment-method">
          <svg
            class="payment-icon"
            viewBox="0 0 24 24"
            fill="currentColor">
            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2zm0 2v12h16V6H4zm2 2h12v2H6V8zm0 4h12v2H6v-2z" />
          </svg>
          <span>PayPal</span>
        </div>
        <div class="payment-method">
          <svg
            class="payment-icon"
            viewBox="0 0 24 24"
            fill="currentColor">
            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2zm0 2v12h16V6H4zm2 2h12v2H6V8zm0 4h12v2H6v-2z" />
          </svg>
          <span>Apple Pay</span>
        </div>
        <div class="payment-method">
          <svg
            class="payment-icon"
            viewBox="0 0 24 24"
            fill="currentColor">
            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2zm0 2v12h16V6H4zm2 2h12v2H6V8zm0 4h12v2H6v-2z" />
          </svg>
          <span>Google Pay</span>
        </div>
      </div>
    </div>

    <!-- Footer Bottom -->
    <div class="footer-bottom">
      <div class="footer-bottom-content">
        <div class="footer-copyright">
          <p>&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.</p>
        </div>
        <div class="footer-legal">
          <a href="/pages/privacy-policy">Privacy Policy</a>
          <a href="/pages/privacy-policy">Terms of Service</a>
          <a href="/pages/privacy-policy">Cookie Policy</a>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  /* Footer Styles */
  .footer {
    background: linear-gradient(135deg, #dc2626 0%, #000000 100%);
    color: var(--white);
    padding: 6rem 0 2rem;
    position: relative;
    overflow: hidden;
  }

  .footer-content {
    display: flex;
    flex-wrap: wrap;
    gap: 4rem;
    margin-bottom: 4rem;
    justify-content: space-between;
  }

  .footer-section {
    flex: 1 1 220px;
    min-width: 220px;
    margin-bottom: 2rem;
  }

  .footer-section h4 {
    font-size: 1.8rem;
    margin-bottom: 2rem;
    color: var(--white);
    font-weight: 600;
  }

  .footer-logo {
    margin-bottom: 2rem;
  }

  .footer-logo-image {
    height: 4rem;
    width: auto;
  }

  .footer-logo-text {
    font-size: 2.4rem;
    color: var(--white);
    margin: 0;
    background-clip: text;
    font-weight: 900;
  }

  .footer-description {
    color: var(--white);
    line-height: 1.6;
    margin-bottom: 2rem;
    font-size: 1.4rem;
  }

  .footer-social h4 {
    font-size: 1.6rem;
    margin-bottom: 1.6rem;
  }

  .social-links {
    display: flex;
    gap: 1.6rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 4rem;
    height: 4rem;
    background: var(--gray-800);
    border: 2px solid var(--gray-600);
    border-radius: 50%;
    color: var(--white);
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .social-link:hover {
    background: var(--primary-light);
    border-color: var(--primary-light);
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(220, 38, 38, 0.3);
  }

  .social-link .icon {
    width: 2rem;
    height: 2rem;
  }

  .footer-links {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .footer-links li {
    margin-bottom: 1rem;
  }

  .footer-links a {
    color: var(--white);
    text-decoration: none;
    font-size: 1.4rem;
    transition: color 0.3s ease;
  }

  .footer-links a:hover {
    color: var(--primary-light);
  }

  .footer-payment {
    margin-bottom: 3rem;
  }

  .footer-payment h4 {
    font-size: 1.6rem;
    margin-bottom: 2rem;
    color: var(--white);
  }

  .payment-methods {
    display: flex;
    gap: 2rem;
    flex-wrap: wrap;
  }

  .payment-method {
    display: flex;
    align-items: center;
    gap: 0.8rem;
    padding: 1rem 1.6rem;
    background: var(--gray-800);
    border: 1px solid var(--gray-600);
    border-radius: 0.8rem;
    color: var(--white);
    font-size: 1.2rem;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .payment-method:hover {
    background: var(--gray-700);
    border-color: var(--primary-light);
    transform: translateY(-2px);
  }

  .payment-icon {
    width: 2rem;
    height: 2rem;
  }

  .footer-bottom {
    border-top: 1px solid var(--gray-600);
    padding-top: 2rem;
    position: relative;
  }

  .footer-bottom::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--primary-light), transparent);
    opacity: 0.3;
  }

  .footer-bottom-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .footer-copyright p {
    color: var(--white);
    font-size: 1.4rem;
    margin: 0;
  }

  .footer-legal {
    display: flex;
    gap: 2rem;
  }

  .footer-legal a {
    color: var(--white);
    text-decoration: none;
    font-size: 1.4rem;
    transition: color 0.3s ease;
  }

  .footer-legal a:hover {
    color: var(--primary-light);
    text-shadow: 0 0 8px rgba(220, 38, 38, 0.3);
  }

  .footer-content .footer-section:not(:first-child) a:hover {
    color: var(--primary-light);
    text-shadow: 1px 1px 5px rgb(0, 0, 0);
  }

  @media (max-width: 1024px) {
    .footer-content {
      gap: 2rem;
    }
  }

  @media (max-width: 768px) {
    .footer-content {
      flex-direction: column;
      gap: 2rem;
    }
    .footer-section {
      min-width: 0;
      width: 100%;
    }
    .footer-bottom-content {
      flex-direction: column;
      gap: 1rem;
      align-items: flex-start;
    }
    .footer-legal {
      gap: 1rem;
      flex-wrap: wrap;
    }
  }
</style>