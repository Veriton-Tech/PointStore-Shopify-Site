<script>
document.addEventListener('DOMContentLoaded', function() {
  // Mobile menu toggle with accessibility improvements
  var menuToggle = document.querySelector('.mobile-menu-toggle');
  var mobileMenu = document.querySelector('.mobile-menu');
  var menuClose = document.querySelector('.mobile-menu-close');

  if (menuToggle && mobileMenu) {
    menuToggle.addEventListener('click', function() {
      var isOpen = mobileMenu.classList.contains('active');
      mobileMenu.classList.toggle('active');
      menuToggle.setAttribute('aria-expanded', !isOpen);
      
      // Focus management
      if (!isOpen) {
        menuClose.focus();
        document.body.style.overflow = 'hidden';
      } else {
        menuToggle.focus();
        document.body.style.overflow = '';
      }
    });
  }

  if (menuClose && mobileMenu) {
    menuClose.addEventListener('click', function() {
      mobileMenu.classList.remove('active');
      menuToggle.setAttribute('aria-expanded', 'false');
      menuToggle.focus();
      document.body.style.overflow = '';
    });
  }

  // Close mobile menu on escape key
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape' && mobileMenu.classList.contains('active')) {
      mobileMenu.classList.remove('active');
      menuToggle.setAttribute('aria-expanded', 'false');
      menuToggle.focus();
      document.body.style.overflow = '';
    }
  });

  // Close mobile menu when clicking outside
  mobileMenu.addEventListener('click', function(e) {
    if (e.target === mobileMenu) {
      mobileMenu.classList.remove('active');
      menuToggle.setAttribute('aria-expanded', 'false');
      menuToggle.focus();
      document.body.style.overflow = '';
    }
  });

  // Mega dropdown logic
  var categoryItems = document.querySelectorAll('.mega-categories-list li');
  var subcategories = document.querySelectorAll('.mega-subcategory');
  var navCategoryItems = document.querySelectorAll('.navbar-nav .nav-item[data-category]');
  var megaDropdown = document.querySelector('.mega-dropdown');
  var megaDropdownMenu = megaDropdown.querySelector('.mega-dropdown-menu');

  // Category hover inside mega menu
  categoryItems.forEach(function(item) {
    item.addEventListener('mouseenter', function() {
      categoryItems.forEach(function(i) { i.classList.remove('active'); });
      item.classList.add('active');
      var cat = item.getAttribute('data-category');
      subcategories.forEach(function(sub) {
        if(sub.getAttribute('data-category') === cat) {
          sub.classList.add('active');
          sub.style.display = 'block';
        } else {
          sub.classList.remove('active');
          sub.style.display = 'none';
        }
      });
    });
  });

  // Show first category by default
  if(categoryItems.length && subcategories.length) {
    categoryItems[0].classList.add('active');
    subcategories[0].classList.add('active');
    subcategories[0].style.display = 'block';
  }

  // Show mega-dropdown on hover of nav category
  navCategoryItems.forEach(function(navItem) {
    navItem.addEventListener('mouseenter', function() {
      var cat = navItem.getAttribute('data-category');
      
      // Calculate the correct top position
      var headerNav = document.querySelector('.header-nav');
      var headerNavRect = headerNav.getBoundingClientRect();
      var dropdownTop = headerNavRect.bottom + window.scrollY;
      
      megaDropdownMenu.style.top = dropdownTop + 'px';
      megaDropdownMenu.classList.add('active');
      megaDropdown.classList.add('active');

      // highlight correct category
      categoryItems.forEach(function(i) {
        if(i.getAttribute('data-category') === cat) {
          i.classList.add('active');
          i.dispatchEvent(new Event('mouseenter')); // show related subcategory
        } else {
          i.classList.remove('active');
        }
      });
    });
  });

  // Close mega-dropdown when mouse leaves nav bar or dropdown
  document.querySelector('.navbar-nav').addEventListener('mouseleave', function() {
    megaDropdownMenu.classList.remove('active');
    megaDropdown.classList.remove('active');
  });

  megaDropdownMenu.addEventListener('mouseleave', function() {
    megaDropdownMenu.classList.remove('active');
    megaDropdown.classList.remove('active');
  });

  // --- Mobile Category Menu Logic ---
  var mobileMenuBody = document.querySelector('.mobile-menu-body');
  var categories = [
    {
      name: 'Women',
      key: 'women',
      sub: [
        { name: 'Pants', url: '/collections/women-pants' },
        { name: 'Blouses', url: '/collections/women-blouses' },
        { name: 'Jackets', url: '/collections/women-jackets' },
        { name: 'Blazers', url: '/collections/women-blazers' },
        { name: 'Skirts', url: '/collections/women-skirts' },
        { name: 'Dresses', url: '/collections/women-dresses' },
        { name: 'Accessories', url: '/collections/women-accessories' }
      ]
    },
    {
      name: 'Men',
      key: 'men',
      sub: [
        { name: 'Shorts', url: '/collections/men-shorts' },
        { name: 'Pants', url: '/collections/men-pants' },
        { name: 'T-shirts', url: '/collections/men-tshirts' },
        { name: 'Shirts', url: '/collections/men-shirts' },
        { name: 'Blazers', url: '/collections/men-blazers' },
        { name: 'Suits', url: '/collections/men-suits' },
        { name: 'Accessories', url: '/collections/men-accessories' }
      ]
    },
    {
      name: 'Kids',
      key: 'kids',
      sub: [
        { name: 'By Size', url: '/collections/kids-size' },
        { name: 'Pants', url: '/collections/kids-pants' },
        { name: 'T-shirts', url: '/collections/kids-tshirts' },
        { name: 'Dresses', url: '/collections/kids-dresses' },
        { name: 'Jumpers', url: '/collections/kids-jumpers' },
        { name: 'Casual Wear', url: '/collections/kids-casual' }
      ]
    },
    {
      name: 'Accessories',
      key: 'accessories',
      sub: [
        { name: 'General Accessories', url: '/collections/general-accessories' },
        { name: 'Beauty and Personal Care', url: '/collections/beauty-personal-care' }
      ]
    },
    {
      name: 'Sale',
      key: 'sale',
      sub: [
        { name: 'All Sale Items', url: '/collections/sale' }
      ]
    },
    {
      name: 'New Arrivals',
      key: 'new',
      sub: [
        { name: 'All New Arrivals', url: '/collections/new-arrivals' }
      ]
    }
  ];

  function renderMobileCategories() {
    var html = '<ul class="mobile-category-list">';
    categories.forEach(function(cat) {
      html += '<li class="mobile-category-item" data-key="' + cat.key + '">' + cat.name + '</li>';
    });
    html += '</ul>';
    mobileMenuBody.innerHTML = html;
  }

  function renderMobileSubcategories(catKey) {
    var cat = categories.find(function(c) { return c.key === catKey; });
    var html = '<button class="mobile-back-btn">← Back</button>';
    html += '<h4 class="mobile-subcategory-title">' + cat.name + '</h4>';
    html += '<ul class="mobile-subcategory-list">';
    cat.sub.forEach(function(sub) {
      html += '<li><a href="' + sub.url + '">' + sub.name + '</a></li>';
    });
    html += '</ul>';
    mobileMenuBody.innerHTML = html;
  }

  // Initial render
  renderMobileCategories();

  // Handle category click
  mobileMenuBody.addEventListener('click', function(e) {
    if (e.target.classList.contains('mobile-category-item')) {
      var key = e.target.getAttribute('data-key');
      renderMobileSubcategories(key);
    } else if (e.target.classList.contains('mobile-back-btn')) {
      renderMobileCategories();
    }
  });

  // Re-render categories when menu is opened
  var menuToggle = document.querySelector('.mobile-menu-toggle');
  if (menuToggle) {
    menuToggle.addEventListener('click', function() {
      renderMobileCategories();
    });
  }

  // Recalculate dropdown position on window resize
  window.addEventListener('resize', function() {
    if (megaDropdownMenu.classList.contains('active')) {
      var headerNav = document.querySelector('.header-nav');
      var headerNavRect = headerNav.getBoundingClientRect();
      var dropdownTop = headerNavRect.bottom + window.scrollY;
      megaDropdownMenu.style.top = dropdownTop + 'px';
    }
  });

  // Recalculate dropdown position on scroll
  window.addEventListener('scroll', function() {
    if (megaDropdownMenu.classList.contains('active')) {
      var headerNav = document.querySelector('.header-nav');
      var headerNavRect = headerNav.getBoundingClientRect();
      var dropdownTop = headerNavRect.bottom + window.scrollY;
      megaDropdownMenu.style.top = dropdownTop + 'px';
    }
  });

  // Account dropdown functionality
  var accountToggle = document.querySelector('.account-toggle');
  var accountMenu = document.querySelector('.account-dropdown-menu');

  if (accountToggle && accountMenu) {
    accountToggle.addEventListener('click', function(e) {
      e.preventDefault();
      e.stopPropagation();
      
      var isOpen = accountMenu.classList.contains('active');
      accountMenu.classList.toggle('active');
      accountToggle.setAttribute('aria-expanded', !isOpen);
    });

    // Close dropdown when clicking outside
    document.addEventListener('click', function(e) {
      if (!accountToggle.contains(e.target) && !accountMenu.contains(e.target)) {
        accountMenu.classList.remove('active');
        accountToggle.setAttribute('aria-expanded', 'false');
      }
    });

    // Close dropdown on escape key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape' && accountMenu.classList.contains('active')) {
        accountMenu.classList.remove('active');
        accountToggle.setAttribute('aria-expanded', 'false');
      }
    });
  }
});
</script>

